<% layout('layouts/boilerplate')%>

<!-- beginning of the hero -->
<section>
    <div class="p-5 mb-4 bg-light hero" style="background:url(<%=data.heroImage.url%>) no-repeat top/cover">
        <div class="container d-flex">
            <div class=" container-fluid py-5 mt-5">
                <h1 class="display-5 fw-bold col-md pt-5"><%=data.herocaption%> <span
                        class="nextLine"><%=data.spantext%> </span> </h1>
                <a href="" type="button" class="btn btn-primary btn-lg" id="button" data-bs-toggle="modal"
                    data-bs-target="#bookUs">Book Us</a>
            </div>
        </div>

    </div>
</section>
<!-- end of our hero section -->

<!-- beginning of our services section -->
<section class="white mb-5 py-5" id="services">
    <div class="d-flex container">

        <!-- Three columns of text below the carousel -->
        <div class="row d-flex">
            <div class="title">

                <h2 class="text-center mb-3">
                    <i class="bi bi-cart-check-fill"></i>
                    Our Services
                </h2>
                <p class="text-center mb-3 titleDesc">Some of the services we offer</p>
            </div>
            <% for (let service of services){%>
            <div class="col-lg-4 text-center ali">
                <h3><%-service.serviceIcon%></h3>

                <h6><%=service.serviceName%> </h6>
                <p><%=service.serviceDesc%></p>

            </div><!-- /.col-lg-4 -->
            <% } %>



        </div><!-- /.row -->

    </div>
</section>
<!-- end of our services section -->
<!-- beginning of our about section -->
<section class="dark py-2 mb-5" id="about">
    <div class="title mt-5">
        <h2 class="text-center">
            <i class="bi bi-card-list"></i>
            About Us
        </h2>
        <p class="text-center mb-5 titleDesc">About our firm</p>
    </div>
    <div class="container mb-5">


        <div class="row featurette">
            <div class="col-md-6 order-md-2">

                <img src="<%=about.aboutUsImg.url%> " alt="..." class="img-fluid rounded">
            </div>
            <div class="col-md-6 order-md-1 leftText">

                <p class="lead"><%=about.aboutus%></p>
                <a href="about" type="button" class="btn btn-outline-secondary mb-5" id="secondary">Read More</a>
            </div>

        </div>
    </div>

</section>
<!-- end of our about section -->
<!-- beginning of our gallery section -->
<section class="container white" id="galleries">
    <div class="title mt-5">
        <h2 class="text-center">
            <i class="bi bi-image-fill"></i>
            Gallery
        </h2>
        <p class="text-center mb-3 titleDesc">Glance through some of our works</p>
    </div>
    <div class="album py-5">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% for (let gallery of galleries){%>
                <div class="col">
                    <div class="card shadow-sm">
                        <img src="<%=gallery.gallImage.url%>" alt="" class="img-fluid" id="gallery">

                        <div class="card-body">
                            <h5 class="card-title">
                                <%=gallery.name%>
                            </h5>
                            <p class="card-text"><%=gallery.description%> </p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a href="gallery/<%=gallery._id%>/image" type="button"
                                        class="btn btn-sm btn-outline-secondary px-3" id="edit">View</a>

                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <% } %>


            </div>

        </div>
    </div>
</section>
<!-- end of our gallery section -->
<!-- beginning of our reviews section -->
<section class="dark py-5" id="revs">

    <div class="container py-5">

        <div class="row d-flex">
            <div class="review rounded">
                <div class="title mt-5">
                    <h2 class="text-center white">
                        <i class="bi bi-layout-text-window"></i>
                        Reviews
                    </h2>
                    <p class="text-center mb-3 titleDesc">Some reviews from pleased clients</p>
                </div>
                <div id="reviewControls" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <% reviews.forEach((review,i)=>{%>
                        <div class="carousel-item <%= i=== 0 ? 'active':''%>">
                            <div class="col-lg-4 offset-lg-4 col-md-4 offset-md-4 text-center ali">
                                <img src="<%=review.revImage.url%>" class="img-fluid rounded-circle" id="reviewImg"
                                    alt="">

                                <h6 class="reviewTitle mt-3"><%=review.name%></h6>
                                <p class="starability-result mx-auto" data-rating="<%=review.rating%>">
                                    Rated: <%=review.rating%>stars
                                </p>
                                <p>"<%=review.comment%>"</p>

                            </div>
                        </div>
                        <% })%>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#reviewControls"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#reviewControls"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <!-- /.col-lg-4 -->


        </div><!-- /.row -->

    </div>

</section>
<!-- end of reviews section -->
<!-- beginning of faq section -->
<section class="container white mb-5" id="faqs">
    <div class="title mt-5">
        <h2 class="text-center">
            <i class="bi bi-question-square-fill"></i>
            FAQS
        </h2>
        <p class="text-center mb-3 titleDesc">Some frequently asked questions and their answers</p>
    </div>
    <div class="accordion accordion-flush" id="faq">
        <% for (let faq of faqs){%>
        <div class="accordion-item">
            <h2 class="accordion-header" id="flush-headingOne">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                    data-bs-target="#accordion<%=faq._id%>" aria-expanded="false" aria-controls="flush-collapseOne">
                    <%=faq.question%>

                </button>
            </h2>
            <div id="accordion<%=faq._id%>" class="accordion-collapse collapse" aria-labelledby="flush-headingOne"
                data-bs-parent="#faq">
                <div class="accordion-body"><%=faq.answer%>
                </div>
            </div>
        </div>

        <% } %>
    </div>
</section>
<!-- end of faq question -->
<!-- beginning of modal -->
<div class="modal fade" id="bookUs" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Fill in your details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form action="booking" method="POST" id="booking" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="" class="form-control" id="name" name="booking[name]" placeholder="Enter your name"
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="phone" class="form-control" name="booking[phone]" id="phone"
                            placeholder="Enter your phone number" required>
                    </div>
                    <div class="mb-3">
                        <label for="doe" class="form-label">Date of Event</label>
                        <input type="date" class="form-control" name="booking[date]" id="date"
                            placeholder="Enter the date of the event" required>
                    </div>
                    <div class="mb-3">
                        <label for="desc" class="form-label">Description of the event</label>
                        <textarea class="form-control" name="booking[desc]" id="desc" rows="3" required></textarea>
                    </div>
                    <button class="btn text-light" id="button">Submit</button>
                </form>
            </div>

        </div>
    </div>
</div>